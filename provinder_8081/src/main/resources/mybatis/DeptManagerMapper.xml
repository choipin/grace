<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grace.it.dao.DeptManagerDao">
    <resultMap id="collectResultMap" type="com.grace.it.entity.DeptManager">
        <result column="emp_no" jdbcType="BIGINT" property="empNo"/>
        <result column="dept_no" jdbcType="VARCHAR" property="deptNo"/>
        <result column="from_date" jdbcType="TIMESTAMP" property="formDate"/>
        <result column="to_date" jdbcType="TIMESTAMP" property="toDate"/>
    </resultMap>

    <select id="listByCondition" resultMap="collectResultMap">
        SELECT
            emp_no,
            dept_no,
            from_date,
            to_date
        FROM
            dept_manager
        <where>
            <if test="empNo !=null">
                emp_no = #{empNo}
            </if>
            <if test="deptNo !=null and deptNo !=''">
                and dept_no = #{deptNo}
            </if>
            <if test="fromDate !=null">
                and from_date = #{fromDate}
            </if>
            <if test="toDate !=null">
                and to_date = #{toDate}
            </if>
        </where>
    </select>

    <select id="selectByPage" resultMap="collectResultMap" parameterType="com.grace.it.model.PageVo">
        SELECT
            emp_no,
            dept_no,
            from_date,
            to_date
        FROM
            dept_manager
            LIMIT #{currentPage},#{pageSize}
    </select>

    <select id="countDeptManager" resultType="integer">
        SELECT
            count( dept_no )
        FROM
            dept_manager;
    </select>

    <update id="updateByCondition" parameterType="com.grace.it.entity.DeptManager">
        UPDATE dept_manager
        <set>
            emp_no = #{empNo},
            dept_no = #{deptNo},
            from_date = #{fromDate},
            to_date = #{toDate}
        </set>
        <where>
            <if test="empNo !=null">
                emp_no = #{empNo}
            </if>
            <if test="deptNo !=null and deptNo !=''" >
                AND dept_no = #{deptNo}
            </if>
        </where>
    </update>

    <insert id="insert" parameterType="com.grace.it.entity.DeptManager">
        INSERT INTO `dept_manager` VALUES (#{empNo},#{deptNo},#{formDate},#{toDate});
    </insert>

    <delete id="deleteByEmpNo" parameterType="long">
        DELETE
        FROM
            dept_manager
        <where>
            dept_no = #{empNo}
        </where>
    </delete>
</mapper>