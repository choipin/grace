<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grace.it.dao.DeptManagerDao">
    <resultMap id="collectResultMap" type="com.grace.it.entity.DeptManager">
        <result column="emp_no" jdbcType="BIGINT" property="empNo"/>
        <result column="dept_no" jdbcType="VARCHAR" property="deptNo"/>
        <result column="from_date" jdbcType="TIMESTAMP" property="formDate"/>
        <result column="to_date" jdbcType="TIMESTAMP" property="toDate"/>
    </resultMap>

    <select id="listByCondition" resultMap="collectResultMap">
        select emp_no,dept_no,from_date,to_date from dept_manager where emp_no = #{empNo}
    </select>

    <select id="selectTitleByPage" resultMap="collectResultMap" parameterType="com.grace.it.model.PageVo">
        select emp_no,dept_no,from_date,to_date from dept_manager limit #{curretPage} ,#{pageSize}
    </select>

    <update id="updateByCondition" parameterType="com.grace.it.entity.DeptManager">

    </update>

    <insert id="insert" parameterType="com.grace.it.entity.DeptManager">
        INSERT INTO `dept_manager` VALUES (#{empNo},#{deptNo},#{formDate},#{toDate});
    </insert>
</mapper>