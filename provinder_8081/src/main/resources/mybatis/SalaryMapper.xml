<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grace.it.dao.SalaryDao">
    <resultMap id="collectResultMap" type="com.grace.it.entity.Salary">
        <result column="emp_no" jdbcType="BIGINT" property="empNo"/>
        <result column="salary" jdbcType="VARCHAR" property="salary"/>
        <result column="from_date" jdbcType="TIMESTAMP" property="fromDate"/>
        <result column="to_date" jdbcType="TIMESTAMP" property="toDate"/>
    </resultMap>

    <select id="listByCondition" resultMap="collectResultMap">
        select emp_no,salary,from_date,to_date from salaries where emp_no = #{empNo}
    </select>

    <select id="selectTitleByPage" resultMap="collectResultMap" parameterType="com.grace.it.model.PageVo">
        select emp_no,salary,from_date,to_date from salaries limit #{curretPage} ,#{pageSize}
    </select>

    <update id="updateByCondition" parameterType="com.grace.it.entity.Salary">
        update salaries set(emp_no,salary,from_date,to_date) values (
        <if test="salary !=null">
            salary = #{salary}
        </if>
        <if test="fromDate !=null">
            from_date = #{fromDate}
        </if>
        <if test="toDate !=null">
            to_date = #{toDate}
        </if>
        )
        where emp_no = #{empNo}
    </update>

    <insert id="insert" parameterType="com.grace.it.entity.Salary">
        INSERT INTO salary VALUES (#{empNo}, #{salary}, #{fromDate}, #{toDate});
    </insert>

</mapper>