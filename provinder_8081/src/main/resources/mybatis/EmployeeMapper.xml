<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grace.it.dao.EmployeeDao">
    <resultMap id="collectResultMap" type="com.grace.it.entity.Employee">
        <result column="emp_no" jdbcType="BIGINT" property="empNo"/>
        <result column="birth_date" jdbcType="TIMESTAMP" property="birthDate"/>
        <result column="first_name" jdbcType="VARCHAR" property="firstName"/>
        <result column="last_name" jdbcType="VARCHAR" property="lastName"/>
        <result column="gender" jdbcType="VARCHAR" property="gender"/>
        <result column="hire_date" jdbcType="TIMESTAMP" property="hireDate"/>
    </resultMap>

    <select id="listByCondition" resultMap="collectResultMap">
        select emp_no,birth_date,first_name,last_name,gender,hire_date from employees where emp_no = #{empNo}
    </select>

    <select id="selectTitleByPage" resultMap="collectResultMap" parameterType="com.grace.it.model.PageVo">
        select emp_no,birth_date,first_name,last_name,gender,hire_date from employees limit #{curretPage} ,#{pageSize}
    </select>

    <update id="updateByCondition" parameterType="com.grace.it.entity.Employee">

    </update>

    <insert id="insert" parameterType="com.grace.it.entity.Employee">
        INSERT INTO `employees` VALUES (#{empNo}, #{birthDate}, #{firstName}, #{lastName}, #{gender}, #{hireDate});
    </insert>
</mapper>